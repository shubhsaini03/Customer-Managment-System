<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%-include('../../partials/admin/header.ejs');%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%-include('../../partials/admin/left.ejs');%>
            
            <div class="col-md-9">
                <h2 class="text-center text-primary">Customer Query</h2>
                <form action="/admin/contactsearch" method="post" class="ms-4">
                 <label for="" class="text-secondary">Select one</label>
                 <select name="search" id="" >
                    <option value="read">Read</option>
                    <option value="unread">unread</option>
                 </select>
                 <button type="submit" class="btn btn-success">search</button>
                </form>

                <% if(message!=='hello'){%>
                    <div class="text-success"><%=message%></div>
                <%}%> 
            <table class="table table-hover mt-4">
                <tr>
                    <th>s.no</th>
                    <th>Email</th>
                    <th>Query</th>
                    <th>Post Date</th>
                    <th>status</th>
                    <th>Reply</th>
                    <th>Action</th>
                </tr>
                <% contactrecord.forEach((result,key)=>{
                    let sno=++key;
                    %>
                    <tr>
                        <td><%=key%></td>
                <td><%=result.email%></td>
                <td><%=result.query%></td>
                <td><%=result.postdata%></td>
                
               
                <td><a href="/admin/contactusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
               <td><a href="/admin/email/<%=result.id%>"><i  class="bi bi-reply-fill"></i></a></td>
                <td><a href="/admin/contactdelete/<%=result.id%>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                  </svg></a></td>
                    </tr>
                <%})%>
                <% if (contactrecord.length=='0'){%>
                <tr><td colspan="5">No Record Found</td></tr>
                 <%}%>
                    
            </table>
            </div>

        </div>
    </div>
</section>
<%-include('../../partials/admin/footer.ejs');%>


    
</body>
</html>