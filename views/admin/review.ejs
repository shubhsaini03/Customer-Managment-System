<link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%-include('../../partials/admin/header.ejs');%>
<section id="review " class="text-center">
    <div class="container">
        <div class="row">
            <%-include('../../partials/admin/left.ejs');%>
            
            <div class="col-md-9">
                <h2 class="text-center text-primary mb-2">User Review</h2>
                <form action="/admin/reviewsearch" method="post" class="ms-4">
                    <label for="" class="text-secondary">Select one</label>
                    <select name="search" id="" >
                       <option value="publish">Publish</option>
                       <option value="unpublish">Unpublish</option>
                    </select>
                    <button type="submit" class="btn btn-success">search</button>
                   </form>
                
                <table class="table table-hover mt-4">

                     <tr>
                        <th>s.no</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Review</th>
                        <th>Image</th>
                        <th>WorkPlace</th>
                        <th>Post Date</th>
                        <th>status</th>
                        <th>Action</th>
                    </tr>
                    <% reviewupdate.forEach((result,key)=>{
                        let sno=++key;
                        %>

                    <tr>
                        <td><%=key%></td>
                        <td><%=result.Name%></td> 
                        <td><%=result.designation%></td> 
                        <td><%=result.review%></td> 
                     <td><img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                         <td><%=result.company%></td>
                         <td><%=result.pushdata%></td>
                        <td><a href="/admin/statusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                        <td><a href="/admin/reviewdelete/<%=result.id%>"><i class="bi bi-x-lg"></i></a></td>
                        
                
                    </tr>
                    <%})%>
                </table>

        </div>
    </div>
</section>
<%-include('../../partials/admin/footer.ejs');%>


    
</body>
</html>